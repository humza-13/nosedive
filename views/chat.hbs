{{>header}}

<body >

   <div id ="frame">
       <div id = "sidepanel">
       <div id="profile">
			<div class="wrap">
				<img id="profile-img" src="/img/{{myProfilepic}}" class="online" alt="" />
				<h2 class="text-center hidden-xs"> <p>{{myUsername}}</p></h2>
				<i class="fa fa-chevron-down expand-button" aria-hidden="true"></i>
				<div id="status-options">
					<ul>
						<li id="status-online" class="active"><span class="status-circle"></span> <p>Online</p></li>
						<li id="status-away"><span class="status-circle"></span> <p>Away</p></li>
						<li id="status-busy"><span class="status-circle"></span> <p>Busy</p></li>
						<li id="status-offline"><span class="status-circle"></span> <p>Offline</p></li>
					</ul>
				</div>
				
			</div>
		</div>
        <div id="search">
			 <form action="/search" class="text-left search" method="GET">
            <input name="searchfield" type="text" placeholder="Search..">
              
        </form>
		</div>
          <form  action="/logout" method="GET" autocomplete="off">
            <div id="bottom-bar">
          <input type="submit" id="submit" class="btn btn-success btn-block" value='logout'>
		</div>
        </form>
   </div>
<div class="content" id ="contentdiv">
	    <form  action="/index" method="GET" autocomplete="off">
            <div id="bottom-bar">
          <input type="submit" id="submit" class="btn btn-success btn-block" value='Start Chatting!!!'>
		</div>
        </form>
		{{#if user}}
      <div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2>{{user.name}}</h2>
                    <p><strong>Age: </strong> {{user.dob}} </p>
                    <p><strong>Gender: </strong> {{user.gender}} </p>
                    <p><strong>Email </strong> {{user.email}}  </p>
                </div>             
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                        <img src="/img/{{user.profilepic}}" alt="" class="img-circle img-responsive">
                        <figcaption class="ratings">
                            <p>Ratings
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                 <span class="fa fa-star-o"></span>
                            </a> 
                            </p>
                        </figcaption>
                    </figure>
                </div>
            </div>            
           
           
            </div>
    	 </div>                 
		</div>
	</div>
    {{else}}
    <div>
   
    </div>
{{/if}}
	

     </div>


</body>